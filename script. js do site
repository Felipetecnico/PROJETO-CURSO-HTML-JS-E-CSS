function renderImoveis(lista) {
  const container = document.getElementById("lista-imoveis");
  container.innerHTML = "";

  lista.forEach(imovel => {
    const card = document.createElement("div");
    card.className = "card";

    card.innerHTML = `
      <img src="${imovel.imagem}" alt="${imovel.titulo}">
      <h3>${imovel.titulo}</h3>
      <p>${imovel.cidade} • ${imovel.tipo}</p>
      <strong>R$ ${imovel.preco.toLocaleString()}</strong>
      <button onclick="abrirModal(${imovel.id})">Ver detalhes</button>
    `;

    container.appendChild(card);
  });
}

function filtrar() {
  const cidade = document.getElementById("filtro-cidade").value.toLowerCase();
  const tipo = document.getElementById("filtro-tipo").value.toLowerCase();

  const resultado = imoveis.filter(imovel =>
    imovel.cidade.toLowerCase().includes(cidade) &&
    imovel.tipo.toLowerCase().includes(tipo)
  );

  renderImoveis(resultado);
}

function abrirModal(id) {
  const imovel = imoveis.find(item => item.id === id);
  const modal = document.getElementById("modal");

  modal.querySelector("h2").textContent = imovel.titulo;
  modal.querySelector("p").textContent = imovel.descricao;
  modal.querySelector("img").src = imovel.imagem;

  modal.classList.add("ativo");
}

function fecharModal() {
  document.getElementById("modal").classList.remove("ativo");
}

// Inicializar página
renderImoveis(imoveis);
